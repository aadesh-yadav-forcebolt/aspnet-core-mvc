@model IEnumerable<BookModel>
@*@{
        Layout = "_Layout";
    }*@
@{
    ViewData["Title"] = "All Books";
}
<h1>All books</h1>
<div class="items">
    @foreach (dynamic book in Model)
    {
        <div class="card" style="width: 18rem;">
            <img src="~/images/leaf.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@book.Title</h5>
                <p class="card-text">@book.Discription</p>
                <div class="card-inner-div"><a href="/book/getBook/@book.Id" class="btn btn-outline-secondary">View Details</a><span>@book.Author</span></div>
            </div>
        </div>
    }
</div>

