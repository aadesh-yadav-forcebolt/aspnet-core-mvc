<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] | Book store application</title>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <style>
        li{
            margin:0 12px;
            align-self:center;
        }
        .footer{
            position:absolute;
            bottom:0;
            width:100%;
            white-space:nowrap;
            line-height:60px;
        }
    </style>
</head>
<body>
    <header>
        <div class="nav-bar" style="display: flex; padding: 16px 32px; justify-content: space-between;">
            <div class="nav-left" style="display:flex">
                <a style="text-decoration:none;color:black" href="/"><img src="~/images/logo1.jpg" style="width:100px;" /><h3 style="display:inline-block">Book Store</h3> </a>
                <ul style="list-style-type: none;padding:0;margin:0;display:flex;justify-content:center">
                    <li style="display:inline-block">
                        <a style="text-decoration:none;color:black" href="/"><h4>Home</h4></a>
                    </li>
                    <li style="display:inline-block">
                        <a style="text-decoration:none;color:black" href="/book/getAllBooks"><h4>All Books</h4></a>
                    </li>
                    <li style="display:inline-block">
                        <a style="text-decoration:none;color:black" href="/home/aboutus"><h4>About us</h4></a>
                    </li>
                    <li style="display:inline-block">
                        <a style="text-decoration:none;color:black" href="/home/contactus"><h4>Contact us</h4></a>
                    </li>

                </ul>
            </div>
            <div class="nav-right">
                <button style="margin-right:10px" class="btn btn-outline-primary">Login</button>
                <button class="btn btn-outline-primary">Register</button>
            </div>
        </div>
    </header>
    <main role="main">
        @RenderBody()
    </main>
    @*<footer class="border-top footer text-muted text-center">
            <div class="container">
                Copyright &copy; Book Store @DateTime.Now.Year
            </div>
        </footer>*@

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
